<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.renlingfei.heartware.MainActivity">

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        app:menu="@menu/bottom_nav_items"
        app:itemBackground="@color/black_overlay"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:id="@+id/SignedUpText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Signed Up : " />

    <HorizontalScrollView
        android:id="@+id/SignedUpScroll"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_below="@id/SignedUpText"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp">

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            style="?android:attr/buttonBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >


            <TableRow>

                <Button

                    style="?android:attr/borderlessButtonStyle"
                    android:id="@+id/signedup1"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/oldcampic1"
                    android:backgroundTint="#80FFFFFF"
                    android:backgroundTintMode="src_over"
                    android:scaleType="centerCrop"
                    android:text="Zero Waste 2017"
                    android:textAllCaps="false"
                    android:textColor="#4F4F4F"
                    android:textStyle="bold" />

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:id="@+id/signedup2"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/oldcampic2"
                    android:scaleType="centerCrop"
                    android:backgroundTint="#80FFFFFF"
                    android:backgroundTintMode="src_over"
                    android:text="APSN Upcycling 2017"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="#4F4F4F"/>

            </TableRow>
        </TableLayout>
    </HorizontalScrollView >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/SignedUpText"
        android:layout_alignStart="@+id/SignedUpText"
        android:layout_centerVertical="true"
        android:text="In Your Region: "
        android:textSize="20dp"
        android:textStyle="bold"/>

    <HorizontalScrollView
        android:id="@+id/inYourRegion"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/textView2">

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            style="?android:attr/buttonBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TableRow>

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:id="@+id/regionEvent1"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/oldcampic1"
                    android:scaleType="centerCrop"
                    android:backgroundTint="#80FFFFFF"
                    android:backgroundTintMode="src_over"
                    android:text="SG cares"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="#4F4F4F"/>

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:id="@+id/regionEvent2"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/oldcampic2"
                    android:scaleType="centerCrop"
                    android:backgroundTint="#80FFFFFF"
                    android:backgroundTintMode="src_over"
                    android:text="Woodlands Run"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="#4F4F4F"/>
                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:id="@+id/regionEvent3"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/oldcampic3"
                    android:scaleType="centerCrop"
                    android:backgroundTint="#80FFFFFF"
                    android:backgroundTintMode="src_over"
                    android:text="BlastOff"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="#4F4F4F"/>
                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:id="@+id/regionEvent4"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/oldcampic4"
                    android:scaleType="centerCrop"
                    android:backgroundTint="#80FFFFFF"
                    android:backgroundTintMode="src_over"
                    android:text="UpReCycle"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="#4F4F4F"/>

            </TableRow>
        </TableLayout>
    </HorizontalScrollView >


</RelativeLayout>
